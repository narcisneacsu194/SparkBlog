{{#partial "content"}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Edit Entry</h2>
                <form action="/carry-out-edit/{{entry.slug}}" method="post">
                    <label for="title"> Title</label>
                    <input required type="text" name="title"><br>
                    <label for="entry">Entry</label>
                    <textarea required rows="5" name="entry"></textarea>
                    <input type="submit" value="Save Entry" class="button">
                    <a href="/detail/{{entry.slug}}" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}